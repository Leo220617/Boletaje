@page
@model Sicsoft.Checkin.Web.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inicio de sesión</title>
    <link rel="stylesheet" href="/css/assets/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/assets/vendor/fonts/circular-std/style.css" />
    <link rel="stylesheet" href="/css/assets/libs/css/style.css" />
    <link rel="stylesheet" href="/css/assets/vendor/fonts/fontawesome/css/fontawesome-all.css" />

    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>

    <link rel="icon" href="/jpg2.jpg" type="image/png" />
</head>
 
<body>

    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><a href="../index.html"><img class="logo-img" src="/germantec.jpeg" alt="logo"></a><span class="splash-description">Ingrese los datos para el inicio de sesión.</span></div>
            <div class="card-body">
                <form method="post" id="formTipos" role="form" novalidate enctype="multipart/form-data">
                    <div class="form-group">
                        <input class="form-control form-control-lg" placeholder="name@example.com" asp-for="Input.Email" type="email">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="password" asp-for="Input.Password" placeholder="****">
                    </div>
                    <div asp-validation-summary="All" style="text-align: center;" class="text-danger"></div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block">Iniciar Sesión</button>
                </form>
            </div>
        
        </div>
    </div>

 

    <!-- Mainly scripts -->
    <script src="~/css/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/css/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>




</body>
</html>
