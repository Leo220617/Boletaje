@using Sicsoft.Checkin.Web.Models;
@inject IHttpContextAccessor httpContextAccessor


<div class="row">
    <div class="col-md-12   ">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class="card-title">Filtro</h4>

                    </div>

                </div>

            </div>
