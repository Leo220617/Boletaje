                                            @{
                                                if (@item2.Moneda == "COL")
                                                {
                                                    TotalC += Convert.ToDouble(@item2.TotalCompra);
                                                }
                                                else
                                                {
                                                    TotalD += Convert.ToDouble(@item2.TotalCompra);
                                                }


